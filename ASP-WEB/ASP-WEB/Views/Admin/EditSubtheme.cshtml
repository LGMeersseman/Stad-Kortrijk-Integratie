@model ASP_WEB.Models.SubthemesEditViewModel

@{
    ViewBag.Title = "Bewerk een subthema";
}
<div class="wrapper"></div>
<h2>@ViewBag.Title</h2>


<form enctype="multipart/form-data" method="post" class="form-horizontal" action="/Admin/EditSubtheme">
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.subtheme.SubthemeID" name="SubthemeID" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" value="@WebUtility.HtmlDecode(Model.subtheme.Name)" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" rows="3" cols="2" name="Description">@WebUtility.HtmlDecode(Model.subtheme.Description)</textarea>
        <!--<input type="text" name="Description" value="@Model.subtheme.Description" class="form-control"/>-->
    </div>

    <div class="form-group">
        <select name="ThemeID" class="form-control">
            @foreach (var item in Model.themes)
            {
                <option value="@item.ThemeID">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <select multiple name="OfficeIDs" class="form-control">
            @foreach (var item in Model.offices)
            {

                <option value="@item.OfficeID">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="file">Kies een foto</label>
        <input type="file" name="file" id="browse" class="form-control" />
        <div id="preview"></div>
    </div>

    <div class="form-group">
        <input type="submit" id="enabledisable" name="submit" value="Submit" class="btn btn-default" />
        <a href="/Admin/Subthemes">
            <div class="btn btn-default">
                Terug naar de subthema's
            </div>
        </a>
    </div>
</form>
<script src="~/Scripts/photoCheck.js"></script>